<div class="container">
  <%= simple_form_for(@pet, html: { class: 'form-inline' }) do |f| %>
    <div class="form-group">
      <%= f.input :name %>
    </div>
    <div class="form-group">
      <%= f.input :address %>
    </div>
    <div class="form-group">
      <%= f.input :found_on %>
    </div>
    <div class="form-group">
      <%= f.input :species %>
    </div>
    <%= f.submit class: "btn btn-success" %>
  <% end %>
</div>

